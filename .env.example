
# ====== Backend ======
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=cicd_health
POSTGRES_USER=cicd_user
POSTGRES_PASSWORD=supersecret

# Auth tokens (set only the ones you use)
GITHUB_TOKEN=ghp_xxx
GITLAB_TOKEN=glpat-xxx
JENKINS_BASE_URL=http://jenkins:8080
JENKINS_USER=admin
JENKINS_API_TOKEN=jenkinsapitoken

# Optional: pick explicit repos/projects/jobs (comma-separated)
GITHUB_REPOS=owner1/repo1,owner2/repo2
GITLAB_PROJECTS=12345,67890
JENKINS_JOBS=build-api,web-deploy

# Alerting
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXX/YYY/ZZZ
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=alerts@example.com
SMTP_PASSWORD=yourpassword
EMAIL_FROM=alerts@example.com
EMAIL_TO=devops-team@example.com

# Collector
COLLECTOR_POLL_SECONDS=30
PROVIDERS=github,gitlab,jenkins

# CORS (frontend origin, e.g. http://localhost:5173)
FRONTEND_ORIGIN=http://localhost:5173
